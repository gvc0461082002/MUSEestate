<% title "Listings" %>

<% if current_user && current_user.admin_role? %>
  <div class="container placeContainer mb-4">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h6>Yer an admin and you can do shit like this:</h6>
          <%= link_to 'New Place', new_place_path %>
          <hr/>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <h1>Listings</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% for place in @places.all.order(:created_at) %>
      <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 placeWidget">
        <%= render "/shared/placeWidget", place: place %>
    </div>
    <% end %>
  </div>
</div>
